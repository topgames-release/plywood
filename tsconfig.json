{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "declaration": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "skipLibCheck": false,
    "importHelpers": true,
    "lib": ["es2016", "dom", "es2017"],
    "target": "es5",
    "module": "es6",
    "rootDir": "src",
    "outDir": "build",
    "moduleResolution": "node"
  },
  "include": [
    "typings/private.d.ts",
    "src/**/*.ts"
  ]
}
